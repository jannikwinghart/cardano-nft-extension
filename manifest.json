{
  "manifest_version": 3,
  "name": "CNEXT",
  "version": "0.0.1",
  "description": "This extension provides multiple features that improve the workflow of researching, finding and buying cardano NFTs",
  "icons": {
    "128": "img/cnext_icon128.png",
    "48": "img/cnext_icon48.png",
    "16": "img/cnext_icon16.png"
  },
  "action": {
    "default_icon": "img/cnext_icon16.png",
    "default_popup": "popup/popup.html"
  },
  "options_page": "options/options.html",
  "content_scripts":[
    {
      "matches": ["https://cnft.io/token/*", "http://cnft.io/token/*", "https://www.cnft.io/token/*", "http://www.cnft.io/token/*"],
      "js": ["dependencies/jquery-3.6.0.min.js", "contentscript/cnftio.js"],
      "css": []
    }
  ],
  "permissions": [
    "storage",
    "contextMenus",
    "tabs"
  ],
  "host_permissions": [
    "https://cnft.io/token/*"
  ]
}
